@page "/reservation"
@using BD_ProjetBlazor.Partials
@inject Requete_Reservation StationnementService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<h3>Faire une Réservation de Stationnement</h3>

<div class="container border rounded p-4" style="max-width: 600px;">
    <EditForm Model="@form" OnValidSubmit="FaireReservation" FormName="reservationForm">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="stationnement">Stationnement :</label>
            <select id="stationnement" class="form-control" @bind="form.NumStationnement">
                <option value="">Choisir un stationnement</option>
                @foreach (var stationnement in availableStationnements)
                {
                    <option value="@stationnement.NumStationnement">@stationnement.NumStationnement</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="dateEntree">Date d'entrée</label>
            <InputDate id="dateEntree" class="form-control" @bind-Value="form.dateEntree" />
        </div>

        <div class="mb-3">
            <label for="dateSortie">Date de sortie</label>
            <InputDate id="dateSortie" class="form-control" @bind-Value="form.dateSortie" />
        </div>

        <div class="form-group">
            <label>Montant à payer :</label>
            <input class="form-control" value="@montantAPayer" readonly />
        </div>

        <button type="submit" class="btn btn-primary">Réserver</button>
    </EditForm>
</div>
@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info mt-3">
        @message
    </div>
}
@code {
    private ReservationForm form = new ReservationForm();
    private StationnementEntreeSortie reservation = new StationnementEntreeSortie();
    private List<Stationnement> availableStationnements = new List<Stationnement>();
    private string message = "";
    private decimal? montantAPayer;
    private DateOnly lastDateEntree;
    private DateOnly lastDateSortie;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // On calcule toujours le montant si les dates sont valides
        if (form.dateEntree != default && form.dateSortie != default && form.dateSortie >= form.dateEntree)
        {
            // Si la date de sortie est passée, on ignore et on prend au moins aujourd'hui
            var startDate = form.dateEntree < DateOnly.FromDateTime(DateTime.Today)
                            ? DateOnly.FromDateTime(DateTime.Today)
                            : form.dateEntree;

            var endDate = form.dateSortie < DateOnly.FromDateTime(DateTime.Today)
                          ? DateOnly.FromDateTime(DateTime.Today)
                          : form.dateSortie;

            montantAPayer = await StationnementService.CalculerMontantAPayer(startDate, endDate);
            StateHasChanged();
        }
        else
        {
            montantAPayer = 0;
            StateHasChanged();
        }

        // Mettre à jour les dernières dates pour garder la logique si tu veux
        lastDateEntree = form.dateEntree;
        lastDateSortie = form.dateSortie;
    }


    protected override async Task OnInitializedAsync()
    {
        availableStationnements = await StationnementService.GetAvailableStationnementsAsync(form);
    }

    private async Task FaireReservation()
    {
        if (form.NumStationnement == 0)
        {
            message = "Veuillez choisir un stationnement.";
            return;
        }

        var success = StationnementService.IsParkingAvailableAsync(form);
        if (success == null)
        {
            message = "Le stationnement n'est pas disponible pour cette période.";
            return;
        }
        form.PaiementSortie = montantAPayer;
        var reservation = new StationnementEntreeSortie
        {
            NumStationnement = form.NumStationnement,
            DateEntree = form.dateEntree,
            DateSortie = form.dateSortie,
            Reservation = true,
            PaiementSortie = (decimal)form.PaiementSortie!,
            PaiementRecu = false
        };

        bool result = await StationnementService.AjouterReservationAsync(reservation);
        if (result)
        {
            message = "Réservation réussie ! Vous allez maintenant être redirigé vers la page de paiement.";
            await Task.Delay(3000);
            NavigationManager.NavigateTo("/panier_paiement");
        }
        else
        {
            message = "Erreur lors de la réservation, le stationnement n'est pas disponible pour cette période.";
        }
    }
}
