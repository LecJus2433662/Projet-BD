@page "/"
@using BD_ProjetBlazor.Authentication
@using Microsoft.AspNetCore.Components.Authorization
@inject Requete_Connexion ConnexionService
@inject AuthenticationStateProvider authProvider
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<h3 class="text-center mb-4">Connexion</h3>

<div class="container border rounded p-4" style="max-width: 600px;">
    <EditForm Model="@form" OnValidSubmit="Connecter" FormName="registrationForm">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label for="email">Courriel:</label>
            <InputText id="email" class="form-control" @bind-Value="form.Courriel" />
        </div>

        <div class="mb-3">
            <label for="motdepasse">Mot de passe:</label>
            <InputText id="motdepasse" type="password" class="form-control" @bind-Value="form.MotDePasse" />
        </div>

        <button type="submit" class="btn btn-primary">Se connecter</button>

        <div class="mt-3">
            <p>Vous n'avez pas de compte ? Inscrivez-vous ici</p>
            <button class="btn btn-primary" @onclick="NavigateToSignUp">Inscription</button>
        </div>
    </EditForm>
    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-danger mt-3">
            @message
        </div>
    }
</div>

@code {
    private LoginForm form = new LoginForm();
    private string message = "";

    private async Task Connecter()
    {
        if (string.IsNullOrEmpty(form.Courriel) || string.IsNullOrEmpty(form.MotDePasse))
        {
            message = "Veuillez remplir tous les champs.";
            return;
        }


        var utilisateur = await ConnexionService.VerifierConnexion(form.Courriel, form.MotDePasse);

        if (utilisateur == null)
        {
            message = "Identifiants incorrects.";
            return;
        }

        var customAuthProvider = authProvider as CustomAuthenticationStateProvider;
        await customAuthProvider.UpdateAuthenticationState(new Authentication.UserSession
        {
            nomUtilisateur = utilisateur.Prenom,
            role = "User"
        });


        NavigationManager.NavigateTo("/Info_Entree_Sortie");
    }

    public class LoginForm
    {
        public string Courriel { get; set; }
        public string MotDePasse { get; set; }
    }

    private void NavigateToSignUp()
    {
        NavigationManager.NavigateTo("/inscription");
    }
}
