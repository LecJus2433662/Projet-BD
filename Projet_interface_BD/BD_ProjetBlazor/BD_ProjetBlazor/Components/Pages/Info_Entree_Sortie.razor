@page "/Info_Entree_Sortie"
@attribute [StreamRendering]
@using BD_ProjetBlazor.Partials 
@inject Requete_EntreeSortieService Requete_EntreeSortieService

<h3 class="text-center mb-4">Bienvenue dans le stationnement de Jusnder</h3>

<div class="container mt-3">
    <div class="row">
        @if (allStats == null || !allStats.Any())
        {
            <div class="col-12">
                <p class="text-center text-muted">Chargement des informations...</p>
            </div>
        }
        else
        {
            @foreach (var s in allStats)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title text-primary"> Stationnement @s.StationnementId</h5>
                            <hr />

                            <p class="mb-1"><b>Places totales :</b> @s.TotalParkingSpaces</p>
                            <p class="mb-1"><b>Réservations :</b> @s.TotalReservations</p>
                            <p class="mb-1"><b>Places libres :</b> @s.AvailableSpaces</p>
                            <p class="mb-1"><b>Occupation :</b> @s.OccupiedPercentage.ToString("0.0") %</p>
                            <p class="mb-1"><b>Tarif :</b> @s.TarifActuel $</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    private List<StatistiquesStationnementForm> allStats = new();

    protected override async Task OnInitializedAsync()
    {
        allStats = await Requete_EntreeSortieService.GetAllStationnementsStatsAsync();
    }
}
